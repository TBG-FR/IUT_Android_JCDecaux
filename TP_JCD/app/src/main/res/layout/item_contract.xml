<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_buttons"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/vertical_margin_between_elements"
    android:layout_marginBottom="@dimen/vertical_margin_between_elements"
    android:background="@drawable/bg_key"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/contract_name"
        android:text="Lyon"

        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"

        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_buttons"
        android:layout_gravity="center_vertical"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/horizontal_margin_between_elements"

        />

    <!--<ImageView
        android:id="@+id/contract_country"

        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_gravity="center_vertical"

        android:layout_margin="10dp"

        />-->

    <TextView
        android:id="@+id/contract_country"
        android:text="FR"
        android:textSize="35sp"

        android:layout_width="50dp"
        android:layout_height="@dimen/height_buttons"

        android:layout_gravity="center_vertical"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/horizontal_margin_between_elements"

        />

    <TextView
        android:id="@+id/contract_cities"
        android:text="(Caluire-et-Cuire, Lyon, Vaulx-En-Velin, Villeurbanne)"

        android:gravity="center"
        android:textStyle="italic"

        android:layout_width="0dp"
        android:layout_height="@dimen/height_buttons"
        android:layout_gravity="center_vertical"

        app:layout_constraintLeft_toRightOf="@+id/contract_name"
        app:layout_constraintRight_toLeftOf="@id/contract_country"
        android:layout_marginLeft="@dimen/horizontal_margin_between_elements"
        android:layout_marginRight="@dimen/horizontal_margin_between_elements"

        />

</android.support.constraint.ConstraintLayout>